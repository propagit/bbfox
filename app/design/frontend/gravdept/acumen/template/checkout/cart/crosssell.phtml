<?php
/**
 * Cart cross sell items template
 *
 * @see Mage_Checkout_Block_Cart_Crosssell
 */
?>

<?php if($this->getItemCount()): ?>
	<div id="cross-sell" class="block grid-block">
		<div class="block-title">
		    <h2><?php echo $this->__('Recommended Products'); ?></h2>
			<p><?php echo $this->__('Based on your cart, you may be interested in these products also.'); ?></p>
		</div>
	
		<div class="block-content">
		    <ul class="cross-sell-list">
    			<?php foreach ($this->getItems() as $_item): ?>
    				<li>
    					<a class="product-image" href="<?php echo $_item->getProductUrl(); ?>">
                            <img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(200, 200); ?>" alt="<?php echo $this->escapeHtml($_item->getName()); ?>" />
                        </a>
    					
    					<div>
    						<a class="product-name" href="<?php echo $_item->getProductUrl(); ?>"><?php echo $this->escapeHtml($_item->getName()); ?></a>
    						<?php echo $this->getPriceHtml($_item, true); ?>
    						<a class="button" href="<?php echo $this->getAddToCartUrl($_item); ?>"><?php echo $this->__('Add To Cart'); ?></a>
    					</div>
    				</li>
    			<?php endforeach; ?>
    		</ul>
    	</div>
	</div>
<?php endif; ?>
